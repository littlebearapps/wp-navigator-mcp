    "type": "git",
    "url": "git+https://github.com/littlebearapps/wp-navigator-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/littlebearapps/wp-navigator-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "cross-fetch": "^4.0.0",
    "dotenv": "^17.2.3",
